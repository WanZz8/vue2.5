.mint-content
  position absolute
  top 50px
  left 0
  right 0
  bottom 0
  overflow-y scroll
  overflow-x hidden
  -webkit-overflow-scrolling touch
.mint-toast-icon
  display block
  text-align center
  font-size 1.493333rem
.pages-view
  overflow-x hidden
  overflow-y scroll
  height 100%
  width 100%
.user_body.marketCenter
  overflow-x hidden
  overflow-y scroll
.user_body
  height 100%
  width 100%
  p.header_title
    font-size 16px
    color #fff
    font-weight normal
@keyframes placeHolderShimmer
  0%
    background-position -468px 0
  100%
    background-position 468px 0
.animated-background
  animation-duration 1s
  animation-fill-mode forwards
  animation-iteration-count infinite
  animation-name placeHolderShimmer
  animation-timing-function linear
  background #f8f8f8
  background linear-gradient(to right, #eeeeee 8%, #dddddd 18%, #eeeeee 33%)
  background-size 800px 104px
  position relative
