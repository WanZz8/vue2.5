*
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
input,textarea
  -webkit-user-select auto
  margin 0px
  padding 0px
  outline none
html, body, #app
  height 100%
  width 100%
  border 0
  font-size 14px
  margin 0
  padding 0
  position absolute
  left 0
  top 0
  overflow-x hidden
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
body
  font-family 'Microsoft YaHei'
  box-sizing border-box
  -webkit-overflow-scrolling touch
  touch-action none
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

div, p, ul, li, ol, dl, dt, dd, span, img, input, table, h1, h2, h3, h4, h5, h6
  margin 0
  padding 0
  border 0
  list-style none
  list-style-type none
i, em
  font-style normal
a
  text-decoration none
  touch-action none
a:visited
  text-decoration none
button, input
  appearance none
  border-radius 0px
  touch-action none
.page-fade-enter, .page-fade-leave-active
  opacity 0
.page-fade-enter-active, .page-fade-leave-active
  transition opacity 0.2s
.slide-fade-enter-active
  transition all 0.4s ease
.slide-fade-leave-active
  transition all 0.4s ease
.slide-fade-enter, .slide-fade-leave-to
  transform translateY(5%)
  opacity 0
