.title_header
  color #eeeeee
  font-size 16px
.buy_trade_view
  background-color #f8f8f8
  .buy_list
    .buy_title
      height 40px
      color #4A4A4A
      background #fff
      padding 0 15px
      display flex
      margin-top 11px
      p
        font-size 14px
        padding-top 12px
        width 35%
        flex 0 0 35%
      b
        font-size 24px
        line-height 45px
        text-align right
        width 65%
        flex 0 0 65%
    .loco_gold, .buy_prices, .buy_num
      display flex
      position relative
      p
        font-size 14px
        font-weight normal
        color #4a4a4a
        display inline-block
        flex 0 0 50%
        width 50%
        text-align left
        line-height 24px
      span.pcs
        font-size 12px
        color #9b9b9b
        text-align right
        flex 0 0 50%
        width 50%
        line-height 22px
      b
        flex 0 0 50%
        width 50%
        text-align center
        font-size 18px
        line-height 26px
      .number_quick_btn
        clear both
        span
          padding 0 10px
    .buy_model
      position relative
      padding 0 15px
      span
        color #979797
        border-radius 5px
        border-style solid
        border-color #979797
        display inline-block
        padding 4px 7px
        font-size 12px
        margin-bottom 8px
        margin-right 20px
        margin-top 8px
        &.active
          color #eeeeee
    .buy_num
      flex-wrap wrap
      .number_add_less
        flex 0 0 50%
        width 50%
        .btn
          width 46px
          height 26px
          background none
          border none
          font-size 20px
          color #EA3826
          outline none
          touch-action none
          &:nth-child(1)
            margin-left 10px
        span
          width 60px
          display inline-block
          text-align center
          font-size 20px
          color #6B89FE
.number_num_span
  margin-top 18px
  width 100%
  flex-wrap wrap
  display flex
  span
    border-color #979797
    border-style solid
    border-radius 5px
    color #979797
    padding 5px 10px
    text-align center
    margin-right 5%
    touch-action none
    font-size 12px
    display block
    margin-bottom 8px
    &.active
      color #eee !important
    &:nth-last-child(1)
      margin-right 0
.common_trade
  padding 10px 15px 5px 15px
  &::before
    content ''
    width 346px
    height 1px
    background #efefef
    bottom 0
    position absolute
.cash_deposit
  margin-top 15px
.cash_deposit, .comprehensive_cost, .deferred_charges, .exchange_rate
  display flex
  margin-bottom 2px
  .comcc.common_p
    padding-left 135px
    box-sizing border-box
    width 65%
    flex 0 0 65%
    margin-top 2px
  .common_money.cccc
    width 35%
    flex 0 0 35%
    margin-top 2px
  .diyan
    position absolute
    width 135px
    top 6px
  .common_p
    flex 0 0 50%
    width 50%
    b
      float left
      font-weight normal
    i
      width 20px
      height 20px
      float left
      margin-left 8px
      svg
        fill #6B89FE
  .common_money
    flex 0 0 50%
    width 50%
    text-align right
  &::before
    bottom -6px
.trigger_stop_loss, .target_profit, .cash_deposit, .comprehensive_cost, .deferred_charges
  position relative
.deferred_charges
  height 22px
.exchange_rate
  padding 10px 15px 5px 15px
.buy_num, .trigger_stop_loss
  &::before
    bottom -8px
.target_profit
  &::before
    bottom -15px
.buyInButton
  position fixed
  bottom 0
  width 100%
  display flex
  height 50px
  background rgba(255, 255, 255, 0.8)
  button
    flex 0 0 46%
    width 46%
    height 41px
    border-radius 5px
    border none
    color #fff
    margin-top 5px
    background rgba(255, 255, 255, 0.5)
    outline 0
    &:nth-child(1)
      margin-left 10px
      margin-right 10px
    &:nth-child(2)
      background #F5A623
.exchange_bottom
  height 50px
.market_price, .designation_sell
  padding 15px
  h2
    font-size 18px
    color #666666
    text-indent 8px
    line-height 36px
  ul
    li
      font-size 16px
      padding 13px 0
      display flex
      position relative
      text-indent 10px
      &::before
        content ''
        width 100%
        height 1px
        position absolute
        background #eee
        bottom 0
      b
        width 50%
        flex 0 0 1
        color #444444
        font-weight normal
        &.manually_in
          line-height 40px
      span
        width 50%
        flex 0 0 1
        color #999
      .prompt
        font-size 12px
  input
    width 48%
    height 36px
    border-radius 3px
    margin-top 5px
    color #fff
  input[name='confirm']
    margin-right 2%
  input[name='cancel']
    background #999
.profit
  flex 0 0 1
  .profit_operation, .loss_operation
    color #919090
    font-size 14px
    line-height 36px
  .reduce, .add
    color #ffffff
    width 30px
    height 30px
    border none
    float left
    text-align center
    margin 5px 8px 5px 5px
    outline none
  .reduce
    background #7ED321
  .add
    background #EA3826
  .num
    width 80px
    height 30px
    float left
    border solid 1px #979797
    text-align center
    outline none
    font-size 14px
    color #6989ff
& .modal-back
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    background-color rgba(0,0,0,.3)
    display flex
    justify-content center
    align-items center
    .modal
      background-color #fff
      box-shadow 2px 2px 20px 1px
      width 275px
      border-radius 5px
      .modal-header
        padding 5px 10px
        .modal-close
          height 35px
          line-height 35px
          text-align center
          width 100%
          font-size 18px
          border-bottom 1px solid #eee
      .modal-body
        position relative
        padding 0px 10px 5px
        .code
          margin-bottom 5px
          position relative
          width 100%
          color #676363
          height 200px
        .code.code1
          height 85px
        .code.code2
          height 85px
      .modal-footer
        padding-left 10px
        padding-right 10px
        .phoneCode_btn
          float right
          width 105px
          height 32px
          margin-left 10px
          margin-right 10px
          padding-bottom 10px
        input[name='getPhoneCode']
          width 100%
          height 100%
          display block
          border-radius 5px
          font-size 12px
          text-align center
          color #fff
          border none
          outline 0
& .modal-fade-enter, .modal-fade-leave-active
      opacity 0
& .modal-fade-enter-active, .modal-fade-leave-active
      transition: opacity .5s ease

