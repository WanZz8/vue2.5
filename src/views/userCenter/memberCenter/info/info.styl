  .part2
    margin-top 105px
    position relative
    //padding-left 10px
    //padding-right 10px
    .real_ss
      width 100%
      height 100%
      line-height 45px
      display block
      border-radius 25px
      font-size 15px
      background-color #6B89FE
      text-align center
      color #fff
      outline 0
      border none
      touch-action: none
      position: relative
      overflow: hidden
    .real_ss:after
      content ""
      display block
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      pointer-events none
      background-image radial-gradient(circle, #767676 10%, transparent 10.01%)
      background-repeat no-repeat
      background-position 50%
      transform scale(10, 10)
      opacity 0
      transition transform .3s, opacity .5s;
      height 45px
      line-height 45px
      padding-right 15px
    .real_ss:active:after
      transform scale(0, 0)
      opacity .3
      transition 0s
