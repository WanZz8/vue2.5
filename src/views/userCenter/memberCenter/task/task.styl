.task_view
  background-color #f7f7f7
  padding-bottom 45px
  box-sizing border-box
  .task_partTop
    width: 100%;
    background-size: 100%
    position: relative
    height: 165px
    width: 100%
    background: rgb(161,180,255,0.28)
    .task_t1
      height 70px
      width 100%
      text-align center
      padding-top 20px
      .task_t1_p1
        height 35px
        line-height 35px
        width 100%
        span
          font-family PingFang-SC-Medium
          font-size 19px
          color #FFFFFF
    .task_t1_p2
      width 100%
      line-height 20px
      height 20px
      span
        border: 1px solid #5578FF
        border-radius 3px
        height 100%
        line-height 20px
        padding 3px 6px
        color #6283FF
        display inline-block
    .task_t2
      width 100%
      height 75px
      box-sizing border-box
      position relative
      .task_t2_p
        height 100%
        width 100%
        text-align center
        img
          margin-top 10px
          display inline-block
          height 55px
          margin-left 20px
  .part2
    width 100%
    position relative
    height 55px
    line-height 55px
    text-align center
    background-color #F5EAFC
    span
      display inline-block
      font-family PingFang-SC-Medium
      font-size 14px
      color #6B89FE
  .part3
    width 100%
    position relative
    background-color #f7f7f7
    position relative
    .p2-con
      padding-left 20px
      padding-right 20px
      box-sizing border-box
      height 250px
      .p2_content
        box-sizing border-box
        background-color #FFF
        -webkit-box-shadow: -0.01rem 0 0.15rem #eeeeef, 0.01rem 0 0.15rem #f3f3f4, 0 -0.01rem 0.15rem #f1f1f2, 0 0.01rem 0.15rem #fff
        box-shadow: -0.01rem 0 0.15rem #eeeeef, 0.01rem 0 0.15rem #f3f3f4, 0 -0.01rem 0.15rem #f1f1f2, 0 0.01rem 0.15rem #fff
        position absolute
        width 335px
        top -12px
        .p2_cart1
          .p2_cart1_title
            height 55px
            line-height 55px
            text-align center
            font-family PingFang-SC-Medium
            font-size 16px
            color #4A4A4A
          .p2_cart1_items
            width 100%
            position relative
            .mint-cell
              //display inline-block
              //width 100%
              height 65px
              .mint-cell-wrapper
                height 65px
              .mint-cell-text
                font-family PingFang-SC-Medium
                font-size 12px
                color #4A4A4A
              .span_alipay
                font-family PingFang-SC-Medium
                font-size 12px
                color #979797
                display inline-block
              .icon_item
                display inline-block
                width 25px
                height 13px
      .clear
        clear both
  .part4
    width 100%
    position relative
    background-color #f7f7f7
    box-sizing border-box
    .pt4_con
      width 100%
      box-sizing border-box
      padding-right 20px
      padding-left 20px
      .pt4_con_box
        width 100%
        height 115px
        background-color #FFF
        -webkit-box-shadow: -0.01rem 0 0.15rem #eeeeef, 0.01rem 0 0.15rem #f3f3f4, 0 -0.01rem 0.15rem #f1f1f2, 0 0.01rem 0.15rem #fff
        box-shadow: -0.01rem 0 0.15rem #eeeeef, 0.01rem 0 0.15rem #f3f3f4, 0 -0.01rem 0.15rem #f1f1f2, 0 0.01rem 0.15rem #fff
        .pt4_title
          height 45px
          line-height 45px
          text-align center
          p
            font-size 16px
            color #4A4A4A
        .pt4_content
          height 65px
          width 100%
          .mint-cell:last-child
            background-image none
            .mint-cell-wrapper
              background-image none
              & .span_alipay
                background-color #6B89FE
                padding 8px 15px
                border-radius 35px
                display inline-block
                font-family PingFang-SC-Medium
                font-size 12px
                color #FFFFFF
                margin-right 10px
                text-align center
              & .mint-cell-text
                font-family PingFang-SC-Medium
                font-size 16px
                color #4A4A4A
