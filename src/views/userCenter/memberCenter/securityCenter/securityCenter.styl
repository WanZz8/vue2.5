.securityCenter
  box-sizing border-box
  .part1
    width 100%
    position: relative
    .sec_top
      width 100%
      //height 230px
      background-color #6B89FE
      box-sizing border-box
      text-align center
      overflow hidden
      box-sizing border-box
      .sec_tp_pro
        width 100%
        box-sizing border-box
        margin-top 25px
        padding-left 45px
        padding-right 45px
        text-align center
        vertical-align center
        .progress
          width 100%
          position relative
          text-align center
          .pro_con
            position absolute
            -webkit-transform: translate(-50%,-50%)
            -ms-transform: translate(-50%,-50%)
            transform: translate(-50%,-50%)
            left: 50%
            top 50%
            .pro_num
              color #fff
              font-family: PingFang-SC-Bold
              font-size: 25px
              color: #FFFFFF
            .pro_step
              font-family: PingFang-SC-Medium
              font-size: 16px
              color: #FFFFFF
      .sec_tp_img
        width 100%
        height 82px
        margin 0 auto
        box-sizing border-box
        vertical-align bottom
        .sec_img_img
          width 100%
          height 85px
          display inline-block
          vertical-align bottom
    .sec_top::before
      display table
      content ''
