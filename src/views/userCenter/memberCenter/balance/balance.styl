.balance_view
  width 100%
  box-sizing border-box
  -webkit-box-sizing border-box
  background-color #FFF
  .bal_con
    margin-top 15px
    width 100%
    padding-left 15px
    padding-right 15px
    box-sizing border-box
    -webkit-box-sizing border-box
    .part1
      width 100%
      height 125px
      background-color #F5A623
      border-radius 10px
      margin-bottom 15px
      overflow hidden
      box-shadow 1px 2px 4px #ddd
      .part_top
        display flex
        height 85px
        .part_left
          flex 0 0 25%
          width 25%
          padding-top 28px
          i
            width 32px
            height 32px
            float left
            margin-left 8px
          p
            float left
            margin-left 8px
            line-height 35px
            font-size 18px
            color #fff
        .part_middle
          flex 0 0 50%
          width 50%
          text-align center
          padding-top 20px
          p
            color #fff
            font-size 16px
            line-height 24px
        .part_right
          color #fff
          font-size 12px
          padding-top 5px
          position relative
          div
            margin 2px 0
            text-align center
            p
              line-height 18px
          &::before
            content ''
            width 1px
            height 50px
            position absolute
            left -12px
            top 50%
            margin-top -25px
            background #fff
      .part_bottom
        width 100%
        background #fff
        display flex
        div
          flex 0 0 33.333%
          width 33.333%
          position relative
          span
            padding 2px 0
            border-radius 1000px
            border solid 1px #F5A623
            display block
            color #F5A623
            text-align center
            margin 8px 15px
          b
            width 1px
            height 22px
            background #f5a623
            position absolute
            top 10px
