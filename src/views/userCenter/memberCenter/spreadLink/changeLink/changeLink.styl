.changeLink_view
  li.name
    font-size 15px
    color #333
    padding 10px 20px 14px
  li.timer
    padding 10px 20px
    p
      display block
      color #666
      margin-bottom 10px
  li.link_type
    padding 20px
    display flex
    div
      display inline-block
      flex 0 0 33.3333%
      text-align center
      &.type
        p
          color #F5A623
      &.status
        p
          color #7ED321
  li.input_box
    .input_list, .acc_h_d2
      width 90%
      margin 0 auto
      input
        height 44px
        border solid 1px #ccc
        margin-bottom 30px
        border-radius 5px
        text-indent 15px
        width 100%
        outline none
  li.input_btn
    padding 0 20px
    .btn_change
      width 100%
      height 55px
      border-radius 200px
      background #6B89FE
      color #fff
      font-size 15px
      margin-top 60px
.acc_h_d2
  margin-top 5px
  margin-bottom 5px
  position relative
  .mint-cell:last-child
    background 0
    border 1px solid #C1BFC2
    border-radius 5px
    .mint-cell-wrapper
      background 0
  & input.ipt_account
    display inline-block
    width 100%
    height 48px
    outline 0
    box-sizing border-box
    border 1px solid #aeaeae
    border-radius 5px
    font-size 15px
  & input.ipt_account:focus
    border-color #3879d9
    box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.075), 0 0 5px rgba(81, 167, 232, 0.5)
& .down_arrow
  position absolute
  width 22px
  height 22px
  top 15px
  right 10px
  z-index 1000
.mint-popup-bottom
  width 100%
