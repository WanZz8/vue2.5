.withdraw_detail
  height 370px
  margin-top 13px
  .main-body
    overflow scroll
    .entrust_list
      width 320px
      margin 5px auto 13px
      position relative
      height 120px
      box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.06), 0 -2px 4px 0 rgba(0, 0, 0, 0.07)
      padding 0px 9px
      .entrust_title
        height 40px
        overflow hidden
        border-bottom 1px solid #eee
        h1
          font-size 14px
          color #4a4a4a
          line-height 40px
          float left
          font-weight normal
        p
          font-size 12px
          color #4a4a4a
          line-height 35px
          float left
        .for_right
          width 122px
          height 22px
          display block
          float right
          color #ffffff
          line-height 22px
          text-align center
          font-size 14px
          position relative
          margin-top 6px
          border-radius 20px
          &.success
            background-position 100% 0px
          &.fall
            background-position 100% -23px
    .foot_text
      width 100%
      text-align center
      font-size 14px
      margin-top 5px
      height 25px
      line-height 25px
    .container_list
      margin-top 15px
      ul
        display flex
        li
          span
            display block
            line-height 25px
            font-size 12px
            color #9b9b9b
          &.container_left
            flex 60%
            width 60%
            height 50px
            span.dp_successed
              color #4A4A4A
          &.container_center
            flex 6%
            width 6%
          &.container_right
            flex 34%
            width 34%
            height 50px
            line-height 50px
            span
              display inline-block
              font-family PingFang-SC-Medium
              font-size 0.32rem
              color #E75A39
  .top_title
    height 35px
    position relative
    text-align center
    line-height 35px
    .icon_spinner
      position absolute
      height 35px
      width 35px
      left 90px


