.funds_view
  .partTop
    width 100%
    background-size 100%
    position relative
    height 177px
    width 100%
    background-image -webkit-gradient(linear, left top, right top, from(#88A2EA), to(#FEE3D8))
    background-image -webkit-linear-gradient(left, #88A2EA, #FEE3D8)
    background-image -o-linear-gradient(left, #88A2EA, #FEE3D8)
    background-image linear-gradient(to right, #88A2EA, #FEE3D8)
    .Img1
      padding 15px 15px 0 15px
      width 100%
      height 128px
      box-sizing border-box
      border-bottom 1px solid #EEE
      .Img1_time
        width 78px
        height 60px
        text-align center
        vertical-align middle
      .Img1_Info
        width 125px
        padding 5px 0 5px 10px
        text-align center
        .info_p1
          text-overflow ellipsis
          white-space nowrap
          display inline-block
          max-width 2.5rem
          font-size 0.28rem
          margin-bottom 5px
          .info_span1
            font-size 16px
          .info_span2
            padding 0.06rem 0.3rem
            text-align center
            font-weight normal
            font-size 12px
            background #F5A623
            border-radius 0.36rem
            line-height 0.24rem
            margin-left 0.2rem
            color #fff
            padding-bottom 0
        .info_p2
          margin-top 3px
          font-size 13px
      .ss1.Img1_Info
        float left
        box-sizing border-box
        padding-top 30px
        & .info_span1
          font-weight bold
          font-size 20px
      .ss2.Img1_Info
        float leftxwxw
        margin-left 45px
        height 102px
        border-left 1px solid #e3e3e3
        & .info_p2
          font-size 12px
      div
        float left
    .Img2
      height 50px
      line-height 50px
      width 100%
      .cz
        .icons.chongzhi
          width 30px
          height 30px
          float left
      .tx
        .icons.tixian
          width 30px
          height 30px
          float left
        .main-tap-cmline
          display block
          position absolute
          left 0
          bottom 0.2rem
          top 0.25rem
          width 0.5px
          height 55%
          border 0.01rem solid #fff
          z-index 10
      a
        float left
        position relative
        width 33%
        height 50px
        line-height 50px
        text-align center
        p
          margin 10px auto
          width 90px
          height 30px
          line-height 30px
          color #4A4A4A
  .dis_navBar
    margin 0 auto
    margin-top 15px
    .mint-navbar
      width 343px
      height 55px
      box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.06), 0 -2px 4px 0 rgba(0, 0, 0, 0.07)
      border-radius 25px
      margin-top 20px
      margin 20px auto 0px auto
      box-sizing border-box
      .mint-tab-item
        height 21px
        display inline-block
        margin-left 15px
        margin-right 15px
        .mint-tab-item-label
          height 21px
          line-height 21px
      div
        // line-height 8px
        // font-size 14px
      .is-selected
        //border none
        // position relative
        &::before
          content ''
          width 50%
          height 3px
          position absolute
          left 50%
          bottom 0
          margin-left -25%
  & .part1, & .part2, & .part3, & .part4
    margin-bottom 25px
