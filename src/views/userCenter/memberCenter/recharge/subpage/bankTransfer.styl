.part1
  width 100%
  background-repeat no-repeat
  background-size cover
  -webkit-background-size cover
  -o-background-size cover
  position relative
  height 150px
  z-index 10
  .part1_p
    height 120px
    padding-top 30px
    margin 0 auto
    width 250px
    display flex
    .par_lf
      width 60px
      height 60px
      flex 0 0 60px
    .par_rt
      margin-top 10px
      margin-left 15px
      flex 0 0 190px
      p
        color #111
        .vip
          padding 0rem 10px
          text-align center
          font-weight normal
          font-size 12px
          background #F5A623
          border-radius 3px
          line-height 0.24rem
          color #fff
      .balace_wrap
        margin-top 5px
        .balace
          font-size 14px
          color #444
        .money
          font-size 14px
          color #444
      .present_wrap
        margin-top 5px
        span
          font-size 13px
          color #fff
.p2_title
  height 50px
  line-height 50px
  padding-left 15px
  padding-right 15px
  background #f8f8f8
  .p2_ti_p1
    float left
    // font-weight bold
    font-family PingFang-SC-Bold
    font-size 15px
    color #4A4A4A
  .p2_ti_p2
    float right
    font-size 14px
    color #9B9B9B
.p2_list_input
  width 90%
  margin 0 auto
  input
    width 100%
    height 46px
    outline none
    font-size 16px
    text-indent 20px
    color #888
.recharge_btn
  button
    width 90%
    height 100%
    margin 10px auto 0
    line-height 45px
    display block
    border-radius 25px
    font-size 15px
    text-align center
    color #fff
    outline 0
    border none
    touch-action none
    position relative
    overflow hidden
.content_txt
  width 90%
  margin 0 auto
  h3
    margin 12px 0 5px
    color #666666
    font-size 14px
  p
    line-height 24px
    padding 0 5px
    color #888
.fade-enter-active, .fade-leave-active
  transition all 0.2s ease-out
.fade-enter, .fade-leave-to
  opacity 0
