.more-container
  box-sizing border-box
  height 100%
  padding 5px
  padding-bottom 15px
  position relative
  overflow: hidden
  .somore
    font-size 30px
    display inline-block
    color #fff
    width 35px
    text-align center
    box-sizing border-box
    position absolute
    top -5px
    height 100%
    touch-action: none
    overflow: hidden
.more-container::before
  display table
  content: ''
.more-container::after
  display table
  content: ''
