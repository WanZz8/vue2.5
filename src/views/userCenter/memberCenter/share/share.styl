  .part3
    width 100%
    position relative
    margin-bottom 45px
    .p3_con
      width 100%
      height 135px
      position fixed
      padding-left 15px
      padding-right 15px
      bottom 25px
      box-sizing border-box
      .p3_con_d
        width 100%
        height 100%
        background-color #fff
        border-radius 15px
        text-align center
        .p3_con_d_d1
          width 100%
          height 75px
          padding-top 15px
          padding-left 35px
          padding-right 35px
          box-sizing border-box
          p
            font-family PingFang-SC-Medium
            font-size 12px
            color #6B89FE
            height 20px
            line-height 20px
        .p3_con_d_d2
          width 100%
          height 45px
          padding-left 20px
          padding-right 20px
          box-sizing border-box
          .p3_share
            width 100%
            height 100%
            line-height 45px
            display block
            border-radius 25px
            font-size 15px
            background-color #6B89FE
            text-align center
            color #fff
            outline 0
            border none
            touch-action: none
            position: relative
            overflow: hidden
            .p3_share_a
              display inline-block
              color #fff
              width 100%
          .p3_share:after
            content: ""
            display: block
            position: absolute
            width: 100%
            height: 100%
            top: 0
            left: 0
            pointer-events: none
            background-image: radial-gradient(circle, #767676 10%, transparent 10.01%)
            background-repeat: no-repeat
            background-position: 50%
            transform: scale(10, 10)
            opacity: 0
            transition: transform .3s, opacity .5s;
            height 45px
            line-height 45px
            padding-right 15px
          .p3_share:active:after
            transform: scale(0, 0)
            opacity: .3
            transition: 0s
