.quickInt
  padding 0 6px
  .title_service
    height 36px
    line-height 36px
    padding 0 2px
    h1
      font-size 14px
      font-weight normal
      display inline-block
    a
      font-size 14px
      display inline-block
      float right
      color #6B89FE
      position relative
      i
        width 20px
        height 20px
        display block
        position absolute
        left -25px
        top 50%
        margin-top -10px
        svg
          fill #6989ff
  .title_message
    height 32px
    background #F2F2F2
    border-radius 5px
    display flex
    .message_icon
      flex 0 0 15%
      .icon_message
        width 16px
        height 16px
        display block
        float left
        margin 9px 13px
        svg
          fill #ED0000
  .message_txt
    flex 0 0 83%
    overflow hidden
    height 32px
    position relative
    .marquee
      height 32px
      line-height 32px
      span
        padding-right 100px
        color #4A4A4A
        font-size 12px
  .quickInts, .quickInts2
    width 100%
    p
      width 49%
      height 53px
      background #999
      display inline-block
      margin-top 8px
      border-radius 10px
      overflow hidden
      position relative
      i
        width 100%
        height 100%
        position absolute
        top 0
        left 0
        z-index 0
        background-image url('../../../assets/images/home/quick_bg3.png')
        background-size cover
      span
        font-size 14px
        text-align center
        line-height 56px
        color #fff
        display block
    // p:nth-child(1)
    // background #6a89fe
    // p:nth-child(2)
    // background #f5a623
    // p:nth-child(3)
    // background #a57dff
    // p:nth-child(4)
    // background #ff5e4c
    // p:nth-child(5)
    // background #595880
    p:nth-child(even)
      float right
    p:nth-child(odd)
      float left
  .good_gift
    width 100%
    height 53px
    margin-top 8px
    float left
    img
      width 100%
      height 100
  .quickInts2
    b
      width 49%
      height 53px
      display inline-block
      margin-top 8px
      border-radius 10px
      overflow hidden
      &:nth-child(even)
        float right
      &:nth-child(odd)
        float left
      &:nth-last-child(1)
        width 100%
.quickInt .quickInts p.upside_list_class
  width 100%
  i
    background-image url('../../../assets/images/home/quick_bg4.png')
