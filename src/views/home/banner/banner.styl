.banner_box
  width 100%
  height 150px
  overflow hidden
  position relative
  .my-swipe
    height 150px
    color #fff
    text-align center
    .slide
      img
        width 100%
        height 100%
    .mint-swipe-indicators
      left auto
      right 2px
      .mint-swipe-indicator
        background #fff
        &.is-active
          opacity 0.9
  .no_banner
    background #eeeeee
    height 100%
    width 100%
    color #cccccc
    font-size 18px
    text-align center
    line-height 140px
