.kj
  padding 0 6px
  .title_service
    height 36px
    line-height 36px
    padding 0 2px
    h1
      font-size 14px
      font-weight normal
      display inline-block
    a
      font-size 14px
      display inline-block
      float right
      color #6B89FE
  .title_message
    height 32px
    background #F2F2F2
    border-radius 5px
    display flex
    .message_icon
      flex 0 0 15%
      .icon_message
        width 16px
        height 16px
        display block
        float left
        margin 9px 13px
        svg
          fill #ED0000
  .message_txt
    flex 0 0 83%
    overflow hidden
    height 32px
    position relative
    span
      padding-right 60px
      color #4A4A4A
      font-size 12px
      line-height 34px
.quickInts, .quickInts2
  width 100%
  p
    width 49%
    height 53px
    background #ccc
    display inline-block
    margin-top 8px
    border-radius 10px
    overflow hidden
    &.upside_list_class
      width 100%
    span
      font-size 14px
      text-align center
      line-height 53px
      color #fff
      display block
  p:nth-child(1)
    background #6a89fe
  p:nth-child(2)
    background #f5a623
  p:nth-child(3)
    background #a57dff
  p:nth-child(4)
    background #ff5e4c
  p:nth-child(5)
    background #595880
  p:nth-child(even)
    float right
  p:nth-child(odd)
    float left
.good_gift
  width 100%
  height 53px
  margin-top 8px
  float left
  img
    width 100%
    height 100
.quickInts2
  b
    width 49%
    height 53px
    display inline-block
    margin-top 8px
    border-radius 10px
    overflow hidden
    &:nth-child(even)
      float right
    &:nth-child(odd)
      float left
    &:nth-last-child(1)
      width 100%
.green_hands
  padding 8px 6px
  clear left
  h2
    font-size 14px
    font-weight normal
    display inline-block
    color #4a4a4a
  .new_Hand
    height 26px
    width 100%
    background-image url('../../../../assets/images/home/new_prople.png')
    background-size 100% 100%
    text-align center
    font-size 12px
    line-height 26px
    color #4A4A4A
    margin-top 10px
.ranking
  padding 8px 6px
  h2
    font-size 14px
    margin 8px 0px
    font-weight normal
    display inline-block
    color #4a4a4a
  .game_ranking
    width 100%
    height 80px
    border-radius 10px
    box-shadow 0 -2px 5px 0 rgba(0, 0, 0, 0.06), 0 2px 4px 0 rgba(0, 0, 0, 0.1)
    ul
      display flex
      li
        width 33.333%
        height 80px
        flex 0 0 33.333%
        .ranking_name
          text-align center
          line-height 14px
          span
            display block
            margin 8px auto 0
            position relative
            img
              width 16px
              height 14px
              position absolute
              right -3px
              top -5px
          p
            font-size 11px
            color #4a4a4a
            padding-top 3px
          b
            font-weight normal
            font-size 9px
            color #999
