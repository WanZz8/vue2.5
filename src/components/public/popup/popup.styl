.popup_diabox
  position relative
.over-enter-active, .over-leave-active
  transition all 0.3s ease-out
.over-enter
  transform translateY(50%)
  opacity 0
.over-leave-active
  transform translateY(80%)
  opacity 0
.fade-enter-active, .fade-leave-active
  transition all 0.2s ease-out
.fade-enter, .fade-leave-to
  opacity 0
.popup_box
  position fixed
  width 100%
  height 100%
  left 0
  top 0
  background rgba(0, 0, 0, 0.6)
  z-index 1998
.popup_content
  width 100%
  min-height 100px
  background #fff
  position fixed
  left 0
  bottom 0
  z-index 1999
